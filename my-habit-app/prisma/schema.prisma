datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  userId   String @unique
  password String
  routines Routine[]
}

model Routine {
  id       Int     @id @default(autoincrement())
  date     String
  day      String
  start    String
  end      String
  task     String
  done     Boolean
  rating   Int
  isHabit  Boolean @default(false)
  userId   Int
  user     User    @relation(fields: [userId], references: [id])
}
